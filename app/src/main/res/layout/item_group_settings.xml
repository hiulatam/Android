<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/settings_group_item_height"
    android:id="@+id/relativeLayoutMenu"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/imageViewNonAct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/menu_non_act"
        android:layout_marginLeft="@dimen/large_padding"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"/>

    <ImageView
        android:id="@+id/imageViewMenuIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_number_request_allowed"
        android:layout_marginLeft="@dimen/regular_padding"
        android:layout_toRightOf="@+id/imageViewNonAct"
        android:layout_centerVertical="true"/>
    <com.an.customfontview.CustomTextView
        android:id="@+id/customTextViewMenuName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        style="@style/regularFont.colorPrimary"
        android:layout_marginLeft="@dimen/regular_padding"
        android:layout_marginRight="@dimen/regular_padding"
        android:layout_toRightOf="@+id/imageViewMenuIcon"
        android:layout_toLeftOf="@+id/imageViewMenuArrow"
        android:layout_centerVertical="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewMenuNotification"
        android:src="@drawable/menu_notification"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/imageViewMenuArrow"
        android:layout_marginRight="@dimen/regular_padding"
        android:visibility="gone"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkboxMenuNotification"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/imageViewMenuArrow"
        android:layout_marginRight="@dimen/regular_padding"
        android:button="@drawable/checkbox_on_off"/>
    <com.an.customfontview.CustomEditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textMenuNotification"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/imageViewMenuArrow"
        android:layout_marginRight="@dimen/regular_padding"
        android:text="$75"
        style="@style/largeFont.white"
        android:ems="3"
        android:maxLines="1"
        android:digits="1234567890$"
        android:maxLength="4"
        android:textSize="@dimen/regular_font"/>

    <ImageView
        android:id="@+id/imageViewMenuArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/menu_collapse_icon"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/regular_padding"
        android:layout_centerVertical="true"/>



</RelativeLayout>